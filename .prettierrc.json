{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 70,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "always",
  "jsxBracketSameLine": false,
  "overrides": [
    {
      "files": ["*.tsx", "*.jsx"],
      "options": {
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false
      }
    }
  ]
}
